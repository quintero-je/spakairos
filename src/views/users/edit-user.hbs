{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <!-- Material form login -->
  <div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
      <strong>Editar {{brand.name}}</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

      <!-- Form -->
    <form class="text-center" action="/users/edit/{{user._id}}?_method=PUT"  enctype="multipart/form-data" method="POST">
          <input type="hidden" name="_method" value="PUT">

        <!-- name -->
      <div class="md-form">
        <input type="text" id="materialLoginFormName" name="name" value="{{user.name}}" class="form-control" autofocus>
        <label for="materialLoginFormName">Nombre</label>
      </div>

      {{!-- LastName1 --}}
      <div class="md-form">
        <input type="text" id="materialLoginFormLastName1" name="lastname1" value="{{user.lastname1}}" class="form-control">
        <label for="materialLoginFormLastName1">Primer Apellido</label>
      </div>

      {{!-- LastName2 --}}
      <div class="md-form">
        <input type="text" id="materialLoginFormLastName2" name="lastname2"value="{{user.lastname2}}" class="form-control">
        <label for="materialLoginFormLastName2">Segundo Apellido</label>
      </div>

      {{!-- Document --}}
      <div class="md-form">
        <input type="text" id="materialLoginFormDocument" name="document" value="{{user.document}}" class="form-control">
        <label for="materialLoginFormDocument">Document</label>
      </div>

      {{!-- email --}}
      <div class="md-form">
        <input type="email" id="materialLoginFormEmail" name="email" value="{{user.email}}" class="form-control">
        <label for="materialLoginFormEmail">Email</label>
      </div>

      {{!-- idEmpleado --}}
      <div class="md-form">
        <input type="text" id="materialLoginFormIdB" name="id_b" value="{{user.id_b}}" class="form-control">
        <label for="materialLoginFormIdB">Id Empleado</label>
      </div>

      {{!-- phone --}}
      <div class="md-form">
        <input type="number" id="materialLoginPhone" name="phone" value="{{user.phone}}" class="form-control">
        <label for="materialLoginPhone">Tel&eacute;fono</label>
      </div>

       {{!-- movil --}}
      <div class="md-form">
        <input type="number" id="materialLoginMovil" name="movil" value="{{user.movil}}" class="form-control">
        <label for="materialLoginMovil">M&oacute;vil</label>
      </div>

      <div class="md-form">
        <input id="tags" name="groups" type="text" 
        class="" data-role="tagsinput" value="{{user.groups}}">
        <label for="tags">Grupos</label>
      </div>

      {{!-- Brand --}}
      <select class="mdb-select md-form" name="brands">
        <option value="" disabled selected>Escoja la Empresa</option>
        {{#each brands}}
{{!--           {{#if user.brand === id}}
          <option selected value="{{id}}">{{name}}</option>
          {{else}} --}}
          <option value="{{id}}">{{name}}</option>
        {{!--   {{/if}} --}}
        {{/each}}
      </select>

      <!-- Description-->
      <div class="md-form">
        <textarea id="description" name="description" class="md-textarea form-control"></textarea>
        <label for="description">Descripci&oacute;n</label>
      </div>

        <!-- logo -->
        <div class="file-field">
          <div class="mb-4">
            <img  id="preview-image" 
              src="{{brand.logo}}" 
              class="rounded-circle z-depth-1-half avatar-pic" 
              alt="{{brand.name}}"/>
          </div>
          <div class="d-flex justify-content-center">
              <button  class="btn btn-mdb-color btn-rounded float-left" id="upload-dialog" type="button">Logo</button>
              <input type="file" name="image" id="image-file"  style="display:none" />
              <input type="text" value="{{brand.logo}}" name="logo" hidden/>
          </div>
        </div>

        <hr>
        <!-- Sign in button -->
        <button class="btn btn-outline-info waves-effect" type="submit">Actualizar</button>
      </form>
      <!-- Form -->
    </div>
  </div>
  <!-- Material form login -->
</div>
